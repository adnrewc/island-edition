      {% for stylesheet in stylesheets %}
        <link rel="stylesheet" href="{{ stylesheet }}" />
      {% endfor %}
    {% endif %}
  </head>
  <body>
    <a class="skip-link" href="#main">Skip to main content</a>
    <header class="header">
      <div class="wrapper">
        {% include "components/site-nav.njk" %}
      </div>
    </header>
    <main id="main" aria-labelledby="hero-title">
      {{ content | safe }}
    </main>
    <footer class="footer">
      <div class="wrapper">
        <p>Island Edition was a weekly newsletter by Andrew Chisholm (2022â€“2023).</p>
      </div>
